<h1>All restaurants</h1>
<%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-danger" %>
<div class="row">
  <% @restaurants.each do |restaurant| %>
    <div class="col-xs-12 col-sm-6 col-lg-4">
      <div class="card">
        <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
        <p><%= restaurant.address %></p>
        <p><strong>Cuisine: </strong><%= restaurant.category %></p>
        <p><strong>Phone: </strong><%= restaurant.phone_number %></p>
      </div>
    </div>
  <% end %>
</div>
